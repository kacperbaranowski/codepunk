---
// Anti-Pitch section with strikethrough animations
---

<section id="anti-pitch" class="py-24 md:py-32 bg-black text-white overflow-hidden">
  <div class="container mx-auto px-6 md:px-12">
    <div class="max-w-5xl mx-auto text-center">
      <!-- Strikethrough items -->
      <div class="space-y-4 md:space-y-6 mb-12">
        <div class="overflow-hidden">
          <p class="anti-line text-4xl md:text-6xl lg:text-7xl font-bold translate-y-full">
            <span class="strike-through text-gray-500">PAGE BUILDERS</span>
          </p>
        </div>
        <div class="overflow-hidden">
          <p class="anti-line text-4xl md:text-6xl lg:text-7xl font-bold translate-y-full">
            <span class="strike-through text-gray-500">TEMPLATES</span>
          </p>
        </div>
        <div class="overflow-hidden">
          <p class="anti-line text-4xl md:text-6xl lg:text-7xl font-bold translate-y-full">
            <span class="strike-through text-gray-500">WORDPRESS THEMES</span>
          </p>
        </div>
      </div>

      <!-- Main statement -->
      <div class="overflow-hidden mb-12">
        <h2 id="anti-statement" class="text-5xl md:text-7xl lg:text-8xl font-bold text-primary translate-y-full">
          JUST CLEAN CODE.
        </h2>
      </div>

      <!-- Badges -->
      <div class="flex flex-wrap justify-center gap-4">
        <span class="anti-badge neo-border neo-shadow-secondary bg-secondary px-6 py-3 font-bold tilt-left opacity-0">
          CUSTOM CODE ONLY
        </span>
        <span class="anti-badge neo-border neo-shadow-lime bg-lime text-black px-6 py-3 font-bold tilt-right opacity-0">
          ZERO BS
        </span>
        <span class="anti-badge neo-border neo-shadow-cyan bg-cyan text-black px-6 py-3 font-bold tilt-left opacity-0">
          NO SHORTCUTS
        </span>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Lines slide in
  gsap.to(".anti-line", {
    y: 0,
    duration: 0.8,
    stagger: 0.15,
    ease: "power3.out",
    scrollTrigger: {
      trigger: "#anti-pitch",
      start: "top 70%",
      toggleActions: "play none none reverse",
    },
  });

  // Strikethrough animation
  ScrollTrigger.create({
    trigger: "#anti-pitch",
    start: "top 60%",
    onEnter: () => {
      const strikeElements = document.querySelectorAll(".strike-through");
      strikeElements.forEach((el, i) => {
        setTimeout(() => {
          el.classList.add("active");
        }, i * 300);
      });
    },
    onLeaveBack: () => {
      const strikeElements = document.querySelectorAll(".strike-through");
      strikeElements.forEach((el) => {
        el.classList.remove("active");
      });
    },
  });

  // Main statement
  gsap.to("#anti-statement", {
    y: 0,
    duration: 1,
    ease: "back.out(1.2)",
    scrollTrigger: {
      trigger: "#anti-pitch",
      start: "top 50%",
      toggleActions: "play none none reverse",
    },
  });

  // Badges
  gsap.to(".anti-badge", {
    opacity: 1,
    scale: 1,
    stagger: 0.1,
    duration: 0.6,
    ease: "back.out(2)",
    scrollTrigger: {
      trigger: "#anti-pitch",
      start: "top 40%",
      toggleActions: "play none none reverse",
    },
  });
</script>
