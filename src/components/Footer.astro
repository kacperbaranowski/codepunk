---
// Neobrutalist footer
const currentYear = new Date().getFullYear();
---

<footer class="py-12 px-6 md:px-12 bg-black text-white border-t-4 border-primary">
  <div class="container mx-auto">
    <div class="grid md:grid-cols-3 gap-12 items-center">
      <!-- Logo & title -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <span class="font-bold text-3xl">CODEPUNK</span>
          <span class="bg-primary text-black px-2 py-1 text-xs font-bold tilt-right">DEV</span>
        </div>
        <p class="text-gray-400 font-mono text-sm">FULLSTACK WEB DEVELOPER</p>
      </div>

      <!-- Quick links -->
      <div class="flex justify-center gap-8">
        <a href="#services" class="font-bold hover:text-primary transition-colors">SERVICES</a>
        <a href="#projects" class="font-bold hover:text-primary transition-colors">WORK</a>
        <a href="#contact" class="font-bold hover:text-primary transition-colors">CONTACT</a>
      </div>

      <!-- Social links -->
      <div class="flex justify-end gap-4">
        <a
          href="https://github.com"
          target="_blank"
          rel="noopener noreferrer"
          class="neo-border neo-shadow-primary bg-white text-black w-12 h-12 flex items-center justify-center hover:bg-primary transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
